{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@shared-app/*": ["src/app/shared-app/*"],
      "@shared/*": ["src/app/shared/*"],
      "@shared-timesheet/*": ["src/app/feature-modules/timesheet-modules/shared-timesheet/*"],
      "@dynamic-forms/*": ["src/app/modules/dynamic-forms/*"],
      "@http/*": ["src/app/modules/http/*"],
      "@model/*": ["src/app/modules/model/*"],
      "@notification/*": ["src/app/modules/notification/*"],
      "@persistance/*": ["src/app/modules/persistance/*"],
      "@state/*": ["src/app/modules/state/*"],
      "@sync/*": ["src/app/modules/sync/*"],
      "@form-sheet/*": ["src/app/modules/form-sheet/*"],
      "@model-form/*": ["src/app/modules/model-form/*"],
      "@confirm-dialog/*": ["src/app/modules/confirm-dialog/*"],
      "@selectable-list/*": ["src/app/modules/selectable-list/*"],  
      "@array/*": ["src/app/modules/utility/array-helpers/*"],
      "@datetime/*": ["src/app/modules/utility/date-time-helpers/*"],   
      "@global/*": ["src/app/modules/global/*"]
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
