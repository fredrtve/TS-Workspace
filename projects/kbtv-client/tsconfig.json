{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@shared-app/*": ["src/app/shared-app/*"],
      "@shared/*": ["src/app/shared/*"],
      "@shared-timesheet/*": ["src/app/feature-modules/timesheet-modules/shared-timesheet/*"],
      
      "@dynamic-forms/*": ["src/app/modules/dynamic-forms/*"],
      "@form-sheet/*": ["src/app/modules/form-sheet/*"],
      "@model-form/*": ["src/app/modules/model-form/*"],
      "@confirm-dialog/*": ["src/app/modules/confirm-dialog/*"],
      "@selectable-list/*": ["src/app/modules/selectable-list/*"], 
       
      "date-time-helpers": [
        "../../dist/date-time-helpers/date-time-helpers",
        "../../dist/date-time-helpers"
      ],
      "global-types": [
        "../../dist/global-types/global-types",
        "../../dist/global-types"
      ],
      "state-management": [
        "../../dist/state-management/state-management",
        "../../dist/state-management"
      ],
      "array-helpers": [
        "../../dist/array-helpers/array-helpers",
        "../../dist/array-helpers"
      ],
      "notification": [
        "../../dist/notification/notification",
        "../../dist/notification"
      ],
      "persistance": [
        "../../dist/persistance/persistance",
        "../../dist/persistance"
      ],
      "optimistic-http": [
        "../../dist/optimistic-http/optimistic-http",
        "../../dist/optimistic-http"
      ],    
      "state-sync": [
        "../../dist/state-sync/state-sync",
        "../../dist/state-sync"
      ],
      "state-model": [
        "../../dist/state-model/state-model",
        "../../dist/state-model"
      ]
    },
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
