{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "global-types": [
        "dist/global-types/global-types",
        "dist/global-types"
      ],
      "state-management": [
        "dist/state-management/state-management",
        "dist/state-management"
      ],
      "array-helpers": [
        "dist/array-helpers/array-helpers",
        "dist/array-helpers"
      ],
      "date-time-helpers": [
        "dist/date-time-helpers/date-time-helpers",
        "dist/date-time-helpers"
      ],
      "notification": [
        "dist/notification/notification",
        "dist/notification"
      ],
      "state-db": [
        "dist/state-db/state-db",
        "dist/state-db"
      ],
      "optimistic-http": [
        "dist/optimistic-http/optimistic-http",
        "dist/optimistic-http"
      ],
      "global-utils": [
        "dist/global-utils/global-utils",
        "dist/global-utils"
      ],
      "google-places-autocomplete": [
        "dist/google-places-autocomplete/google-places-autocomplete",
        "dist/google-places-autocomplete"
      ],
      "mat-dynamic-form-controls": [
        "dist/mat-dynamic-form-controls/mat-dynamic-form-controls",
        "dist/mat-dynamic-form-controls"
      ],
      "state-sync": [
        "dist/state-sync/state-sync",
        "dist/state-sync"
      ],
      "confirm-dialog": [
        "dist/confirm-dialog/confirm-dialog",
        "dist/confirm-dialog"
      ],
      "dynamic-forms": [
        "dist/dynamic-forms/dynamic-forms",
        "dist/dynamic-forms"
      ],
      "form-sheet": [
        "dist/form-sheet/form-sheet",
        "dist/form-sheet"
      ],
      "state-auth": [
        "dist/state-auth/state-auth",
        "dist/state-auth"
      ],
      "cdk-selectable": [
        "dist/cdk-selectable/cdk-selectable",
        "dist/cdk-selectable"
      ],   
      "model/*": [
        "dist/model/*"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "typedocOptions": {
    "entryPoints": [
      "libs/**/src/public-api.ts"
    ],
    "out": "docs"
  }
}